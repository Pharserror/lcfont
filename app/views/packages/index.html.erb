<ul class="nav nav-tabs">
  <li><%= link_to "All Tests", analyses_path %></li>
  <li class="active"><%= link_to "Testing Packages", packages_path %></li>
</ul>
<ul class="breadcrumb">
  <li class="active">All Testing Packages <span class="divider">/</span></li>
  <% @packages.each do |package| %>
    <li><%= link_to package.name, package %><span class="divider">/</span></li>
  <% end %>
</ul>
<% @packages.each do |package| %>
  <div class="row thumbnail-row">
    <div class="span12" style="width:100%;">
      <div class="thumbnail">
        <%= image_tag("photos/benchandhood.jpg", :size => "520x360") %>
        <div class="caption">
          <h3><%= package.name %></h3>
          <p><%= package.desc %></p>
          <%= link_to "Learn More", package, :class => "btn btn-primary" %> 
          <%#= link_to "Get a Quote", package, :class => "btn btn-success" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
